<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.websarva.wings.android.flat.viewmodel.StartupViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.StartupFragment">

        <Button
            android:id="@+id/bt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onSafeClick="@{() -> viewModel.loginButtonOnClickListener()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bt_new_account_registration"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/bt_new_account_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onSafeClick="@{() -> viewModel.accountRegistrationButtonOnClickListener()}"
            app:layout_constraintStart_toEndOf="@id/bt_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>