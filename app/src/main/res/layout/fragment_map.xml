<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.MapFragment">

    <Button
        android:id="@+id/bt_floor5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/_5f"
        />
    <Button
        android:id="@+id/bt_floor4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_floor5"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/_4f"
        />
    <Button
        android:id="@+id/bt_floor3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_floor4"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/_3f"
        />
    <Button
        android:id="@+id/bt_floor2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_floor3"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/_2f"
        />
    <Button
        android:id="@+id/bt_floor1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_floor2"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/_1f"
        />
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>